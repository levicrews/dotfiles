{
    // Basic
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.editor.tabCloseButton": "off",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.openDefaultSettings": false,
    "window.restoreWindows": "none",

    // Editor
    "editor.rulers": [80],
    "editor.fontFamily": "'Cascadia Code PL', 'monospace', monospace",
    "editor.fontLigatures": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.snippetSuggestions": "top",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.bracketPairColorization.enabled": true,

    // Diff Editor
    "diffEditor.ignoreTrimWhitespace": true,

    // Terminal
    "terminal.integrated.fontFamily": "'Cascadia Code PL'",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],

    // Files
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // LaTeX
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz*",
        "*.nav"
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (for EPS)",
            "tools": [
                "latexmk -xelatex -shell-escape document"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.recipe.default": "lastUsed",

    // Python
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "/home/levic/anaconda3/bin/python",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // Julia
    "julia.execution.resultType": "inline",

    // Project Manager
    "projectManager.git.baseFolders": [
        "$home/Documents"
    ],
    "explorer.confirmDragAndDrop": false,
    "jupyter.askForKernelRestart": false,
    "explorer.confirmDelete": false,
    "git.confirmSync": false,
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "git.ignoreLegacyWarning": true,
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "redhat.telemetry.enabled": false,
    "latex-utilities.message.update.show": false,
    "git.openRepositoryInParentFolders": "always",
    "[python]": {
        "editor.formatOnType": true
    },
    "jupyter.interactiveWindow.creationMode": "perFile",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "yaml": false,
        "txt": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
}